{
    "name": "zori_theme",
    "version": "1.0.0",
    "description": "FE theme for Zori's project",
    "main": "index.js",
    "scripts": {
      "build:sass": "node-sass assets/components/ -o assets/components/ --include-path ./node_modules/breakpoint-sass/stylesheets",
      "watch:sass": "onchange 'assets/components/**/*.scss' -- npm run build:sass",
      "build:sprite": "svg-sprite -s --symbol-example --dest=./assets/sprite/ assets/icons/sprite-icons/*.svg -w=24 -h=24 --shape-dim-attributes=true --log=debug",
      "cache": "node .twig-cache.js",
      "sass-lint": "sass-lint -c .sass-lint.yml 'assets/**/*.scss' -v -q",
      "start": "npm-run-all --parallel watch:*"
    },
    "repository": {
      "type": "git",
      "url": "git@gitlab.com:leica-iop/leica-cms"
    },
    "license": "ISC",
    "devDependencies": {
      "breakpoint-sass": "^2.7.1",
      "node-sass": "^4.13.1",
      "node-sass-glob-importer": "^5.3.2",
      "npm-run-all": "^4.1.5",
      "onchange": "^6.1.0",
      "svg-sprite": "^1.5.0"
    },
    "dependencies": {
      "node-watch": "^0.6.4",
      "autoprefixer": "^6.5.4",
      "sass-lint": "^1.13.1"
    },
    "browserslist": [
      "last 1 version",
      "> 2%"
    ]
  }
  